<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.albertomoya.readchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.others.ChatActivity"/>
        <activity android:name=".activities.others.ReadChapterBookActivity" />
        <activity android:name=".activities.others.SelectChapterToReadBookActivity" />
        <activity android:name=".activities.others.BookWriteChapterActivity" />
        <activity android:name=".activities.others.BookDetailAndEditActivity" />
        <activity android:name=".activities.others.BookDetailCurrentUserActivity" />
        <activity android:name=".activities.others.ProfileUserBookPostDetailActivity" />
        <activity android:name=".activities.others.BookPostDetailActivity" />
        <activity android:name=".activities.others.EditProfileActivity" />
        <activity android:name=".activities.launcher.EmptyActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.login.SignUpActivity" />
        <activity android:name=".activities.login.SignInActivity" />
        <activity android:name=".activities.launcher.SplashActivity" />
        <activity android:name=".activities.main.MainActivity" />
    </application>

</manifest>