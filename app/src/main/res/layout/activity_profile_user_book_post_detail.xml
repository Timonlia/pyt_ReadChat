<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:background="@color/colorSecondaryText"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:layout_marginTop="55dp"
            android:transitionName=""
            />

        <ImageView
            android:id="@+id/imageProfileBackgroundFragmentDetail"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_background_profile"
            android:transitionName=""
            app:layout_collapseMode="parallax"
            android:layout_marginTop="55dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:id="@+id/imageProfileFragmentDetail"
            android:layout_height="120dp"
            android:src="@drawable/ic_person_white"
            app:civ_circle_background_color="@color/colorLight"
            android:layout_marginTop="190dp"
            app:civ_border_color="@color/colorSecondaryText"
            app:civ_border_width="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/textViewFollowersDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="sdasdasda"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/roboto_medium_italic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/textViewBooksDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/roboto_medium_italic"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_gravity="left"
            android:layout_marginStart="240dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="315dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewNickUserDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/edit_text_profile_background"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/textViewDescriptionUserDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_profile_background"
                android:maxLength="200"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBookProfileDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>
        </LinearLayout>
    </com.google.android.material.appbar.CollapsingToolbarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>